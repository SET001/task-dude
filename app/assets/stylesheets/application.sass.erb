 *
  outline: none

$footerheight: 30px
html, body
  height: 100%
#wrapper
  min-height: 100%
  margin: 0 auto $footerheight*-1
#push
  height: $footerheight
#footer
  text-align: center
  height: $footerheight
  line-height: $footerheight

.countries
  min-width: 0
  .country
    background: url(<%=asset_path('country-flags.png')) no-repeat
    width: 69px
    height: 65px

    &.country_russia
      background-position: -190px -960px
    &.country_england
      background-position: -510px -350px
    &.country_germany
      background-position: -317px -262px

@require _tasks-list